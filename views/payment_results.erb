<h1> Results of monthly payment calculations</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.round(4).to_s + "%" %> 
  </dd>
  <dt>
    Number of years
  </dt>
  <dd>
    <%= @num_year.to_s %>
  </dd>
  <dt>
    Principal
  </dt>
  <dd>
    <%= "$" + @principal.round(2).to_s %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= "$" + @the_results.round(2).to_s %>
  </dd>
</dl>

